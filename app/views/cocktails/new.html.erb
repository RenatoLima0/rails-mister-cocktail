<div class="container">
  <h1 class="text-center my-5">New Cocktail</h1>
  <div class="row justify-content-center">
    <div class="col-8">
      <%= simple_form_for [ @cocktail ] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Submit Cocktail", class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-8 text-center">
      <%= link_to 'Home ', cocktails_path, class: 'btn btn-primary text-center mt-3' %>
    </div>
  </div>

</div>